@model PizzaStoreLibrary.library.Models.Location

@{
    ViewData["Title"] = "Edit";
}

<h1>@Model.Name</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Inventory" class="table-primary"></label>
                <br/>
                @foreach (var ingredient in PizzaStoreLibrary.library.Models.Ingredient.Ingredients)
                {
                    @ingredient.Name
                    <input asp-for=Inventory[ingredient.Id] class="form-control" />
                }
                <span asp-validation-for="Inventory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
